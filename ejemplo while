import java.util.Scanner;

public class ContarNumeros {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Solicita un número al usuario
        System.out.print("Ingresa un número entero para comenzar a contar hasta 100: ");
        int numero = scanner.nextInt(); // Lee un número entero

        // Usa un ciclo while para contar hasta 100
        while (numero <= 100) {
            System.out.println(numero);
            numero++;
        }

        // Mensaje final (opcional)
        System.out.println(100 + 1); // Solo para mostrar que terminó
    }
}
