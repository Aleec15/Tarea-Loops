import java.util.Scanner;

public class RepetirConFor {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedimos al usuario que ingrese cuántas veces quiere repetir
        System.out.print("¿Cuántas veces quieres que se repita el mensaje? ");
        int repeticiones = scanner.nextInt();

        // Usamos un ciclo for que se ejecuta la cantidad de veces que el usuario indicó
        for (int i = 1; i <= repeticiones; i++) {
            System.out.println("Repetición número: " + i);
        }

        System.out.println("¡Listo! El ciclo terminó.");
    }
}
